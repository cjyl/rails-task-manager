<p>****************************</p>
<p><%= link_to "Edit your task", "#{params[:id]}/edit" %></p>
<h2><%= @task.title %></h2>
<h3><%= @task.details %></h3>
<%= @task.completed ? "This task is completed" : "This task is yet to be done" %>
<p></p>
<%= form_for(@task) do |f| %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
<p>*****************************</p>
<%= link_to "back to list", tasks_path %>
